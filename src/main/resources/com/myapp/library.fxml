<VBox prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.myapp.LibraryController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem fx:id="itemizerButton" mnemonicParsing="false" onAction="#switchToItemizer" text="Add Recipe" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem fx:id="searchButton" mnemonicParsing="false" onAction="#switchToSearch" text="Search" />
            <SeparatorMenuItem mnemonicParsing="false" />            
            <MenuItem fx:id="itemizerButton1" mnemonicParsing="false" onAction="#switchTheme" text="Change Theme" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem fx:id="quitButton" mnemonicParsing="false" onAction="#AppExit" text="Quit" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <TabPane fx:id="tabPane" prefHeight="1053.0" prefWidth="1920.0" tabClosingPolicy="UNAVAILABLE">
      <tabs>
      </tabs>
    </TabPane>
  </children>
</VBox>
